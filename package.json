{
  "name": "how-are-you-be",
  "module": "src/main.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.17",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "TZ=utc bun --watch ./src/main.ts",
    "build": "bun build src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "migration:generate": "bunx drizzle-kit generate:sqlite",
    "export:type": "bunx tsc -p ./tsconfig.export.json",
    "gen": "bunx tsc -p ./tsconfig.export.json --declaration --skipLibCheck --isolatedModules --emitDeclarationOnly --target esnext --module NodeNext --moduleResolution NodeNext --outDir dist"
  },
  "dependencies": {
    "@elysiajs/jwt": "^1.0.2",
    "drizzle-orm": "^0.30.10",
    "elysia": "^1.0.15",
    "zod": "^3.23.5"
  }
}
