{
  "name": "how-are-you-be",
  "module": "src/main.ts",
  "type": "module",
  "devDependencies": {
    "@types/node": "20.11.1",
    "dockerode": "^4.0.2",
    "drizzle-kit": "^0.23.0",
    "fast-check": "^3.20.0",
    "msw": "^2.3.1",
    "prettier": "^3.3.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "tsx watch ./src/main.ts",
    "build": "tsc",
    "start": "NODE_ENV=production && node ./dist/src/main",
    "test:unit": "vitest --config ./test/config/unit.ts",
    "migration:generate": "drizzle-kit generate",
    "migration:drop": "drizzle-kit drop",
    "migration:up": "tsx ./migration",
    "seed": "tsx ./seed",
    "db:init": "rm -rf ./sqlite.db && pnpm migration:up && pnpm seed"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.14.1",
    "@scalar/hono-api-reference": "^0.5.61",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.0",
    "hono": "^4.4.13",
    "mysql2": "^3.10.2",
    "zod": "^3.23.8"
  },
  "engines": {
    "pnpm": "9.4.0",
    "node": ">=20"
  }
}
