{
  "name": "how-are-you-be",
  "module": "src/main.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.17",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "bun --watch ./src/main.ts",
    "build": "bun build src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "migration:generate": "bunx drizzle-kit generate",
    "migration:drop": "bunx drizzle-kit drop",
    "migration:up": "bun run ./migration",
    "seed": "bun run ./seed",
    "db:init": "rm -rf ./sqlite.db && bun run migration:up && bun run seed"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.14.1",
    "@scalar/hono-api-reference": "^0.5.61",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.4.2",
    "mysql2": "^3.10.2",
    "zod": "^3.23.8"
  }
}
